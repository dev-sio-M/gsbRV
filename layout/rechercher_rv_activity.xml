<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:orientation="vertical"
   tools:context=".rv.technique.RechercherRvActivity">


   <TextView
       android:id="@+id/textView3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/titreConsulter" />




   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/lMois"
       android:labelFor="@+id/lMois"/>


   <Spinner
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/mois"
       android:drawSelectorOnTop="true">
   </Spinner>


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/lAnnee"
       android:labelFor="@+id/lAnnee"/>
   <Spinner
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/annee"
       android:drawSelectorOnTop="true">
   </Spinner>


   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/btn_afficher"
       android:id="@+id/Afficher"
       android:onClick="btnAfficher"/>


   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/btn_retour"
       android:id="@+id/Retour"
       android:onClick="btnRetour" />


</LinearLayout>
