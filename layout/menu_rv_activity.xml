<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context=".rv.technique.MenuRvActivity">


   <TextView
       android:id="@+id/textView3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Menu" />


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">


       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/btn_saisir"
           android:id="@+id/Saisir"
           android:onClick="btnSaisir"/>


       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/btn_consulter"
           android:id="@+id/Consulter"
           android:onClick="btnConsulter"
           android:layout_marginLeft="5dp"/>


   </LinearLayout>
</LinearLayout>
